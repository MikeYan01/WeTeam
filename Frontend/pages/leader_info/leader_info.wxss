/* pages/leader_info/leader_info.wxss */
.is_checked, .normal, .team_leader {
  display: flex;
  flex-direction: row;
  vertical-align: middle;
}
.is_checked {
  background-color: greenyellow;
}

.photo {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.team_leader_id, .team_leader_name, .team_member_id, .team_member_name {
  width: 200rpx;
  height: 128rpx;
  margin: 20rpx;
  line-height: 128rpx;
  text-align: center;
}
.bottomBar {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
}
.delete_member, .quit_team, .dissolve_team {
  background-color: greenyellow;
  margin-left: 40rpx;
}