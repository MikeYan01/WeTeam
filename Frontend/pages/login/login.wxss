.userinfo {  
  display: flex;  
  flex-direction: column;  
}  
  
.userinfo-avatar {  
  width: 128rpx;  
  height: 128rpx;  
  margin: 20rpx;
}

.userinfo-nickname {
  margin-left: 25%;
  margin-top: -15%
}

.hint {
  text-align: center;
  color: rgb(185, 185, 185);
  font-size:20px;
  margin-top: 10%;
}

.underline {
  width: 60%;
  margin-top: 10rpx;
  margin-left: 20%;
  height: 1px;
  background-color: rgb(185, 185, 185); 
}

.logininfo {
  margin: 10% 15rpx 15rpx 10rpx; 
  padding: 10rpx;
  line-height: 44px; 
  background-color: white;
  font-size: 20px;
  border: 1px solid rgb(185, 185, 185);
  border-radius: 5px;
}

.input {
  flex: block;  
  float: right;  
  text-align: left; 
  margin-right: 22px; 
  margin-top: 11px; 
  color: black; 
}

.line { 
  width: 100%; 
  height: 1px; 
  background-color: #cccccc; 
  margin-top: 1px; 
} 

.loginBtn {
  margin-top: 10%;
  background-color: rgb(81, 170, 56); 
  color:white;
  width: 280px;
}