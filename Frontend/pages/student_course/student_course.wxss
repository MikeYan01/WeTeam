/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.userinfo {
    margin-top: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx;
    color: #007AFF;
    margin: 40rpx;
}

.userinfo-studentid {
    font-size: 32rpx;
    color: #007AFF;
}

.searchinfo {
    background-color: #fff;
    line-height: 44px;
}

.search-label {
    margin: 15px 15px 15px 10px;
    color: #545454;
    font-size: 14px;
}

.search-text {
    flex: block;
    float: right;
    text-align: right;
    margin-right: 12px;
    margin-top: 11px;
    color: #cccccc;
    font-size: 14px;
}

.courseinfo {
    background-color: white;
}