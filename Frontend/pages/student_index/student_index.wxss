/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.userinfo {
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
    margin: 8rpx;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx;
    color: #007AFF;
    margin: 40rpx;
}

.userinfo-studentid {
    font-size: 32rpx;
    color: #007AFF;
}

.courseinfo {
    background-color: white;
}

.search-bar {
    display: flex;
    flex-direction: row;
    margin: 8rpx;
}

.search-box {
    background-color: white;
    width: 75%;
    border: 1px solid #d0d0d0;
    border-radius: 10rpx;
    margin-left: 20rpx;
}

.search-icon {
    margin: 10rpx 10rpx 10rpx 10rpx;
    position: absolute;
    left:25rpx;
    z-index: 2;
    width: 20px;
    height: 20px;
    text-align: center;
}

.search-text {
    margin-left: 60rpx;
    height: 60rpx;
    border-radius: 5px;
}